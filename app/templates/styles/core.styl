@import 'nib'
@import 'lib'

$color-white = #FFFFFF

$weight-light = lighter
$weight-normal = normal
$weight-bold = bold

body {
  anti-aliasing();
  background-color: $color-white;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-weight: $weight-normal;
  font-size: 62.5%;
  margin: 0;
}

.container {
  margin: 0 auto;
  width: 100%;
  font-size: 1.6em, 1.4em, 1.6em;
  line-height: 1.6;
}
